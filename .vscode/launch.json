    "version": "0.2.0",
    "configurations": [
        {
            "type": "cc65-vice",
            "request": "launch",
            "name": "CC65 Vice Launch",
            "build": {
                "cwd": "${workspaceFolder}",
                "command": "make",
                "skip": false,
                "args": [
                    "OPTIONS=mapfile,labelfile,debugfile,debugtables"
                ]
            },
            "stopOnEntry": true,
            "stopOnExit": true,
            "emulatorArgs": [
                "-model",
                "ntsc"
            ]
        }
    ]
}